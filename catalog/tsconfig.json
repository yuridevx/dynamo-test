{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "sourceRoot": "./src",
    "outDir": "./compiled",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
